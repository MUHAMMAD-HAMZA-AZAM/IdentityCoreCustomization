@model IEnumerable<AppCustomer>


<h3 class="text-info"> Help Factory Users  </h3>
<br />

@if (Model.Any())
{
    <a class="btn btn-primary" id="register" asp-area="Identity" asp-page="/Account/Register">Add New User</a>


    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.Email</h5>
            </div>
            <div class="card-footer text-muted">
                <a asp-controller="UserManagement" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-info">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }

}
else
{
    <div class="card">
        <div class="card-header">
            No Users in the Help Factory
        </div>
        <div class="card-body">
            <h5 class="card-title">Click below to add a new User</h5>
            <p class="card-text"></p>
            <a class="btn btn-primary" id="register" asp-area="Identity" asp-page="/Account/Register">Add New User</a>

        </div>
    </div>
}




