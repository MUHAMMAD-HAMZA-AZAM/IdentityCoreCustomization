@model List<IdentityCode.ViewModels.CreateAppRoles>

@{
    ViewData["Title"] = "EditUsersInRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var roleId = ViewBag.RoleId;
}

    <form method="post">

        <div class="card ">
            <div class="card-header">
                <h2> Add or Remove User from this Role</h2>
            </div>
            <div class="card-body">
                
                @for(int i=0;i<Model.Count;i++)
                {
                    <div class="form-check m-1">
                        <input asp-for="@Model[i].IsSelected" class="form-check-input"/>
                        <label class="form-check-label">
                            @Model[i].UserName
                        </label>
                    </div>
                }

            </div>
            <div class="card-footer text-muted">
                <input type="submit" value="Update" class="btn btn-info"/>
                <a asp-controller="RoleManagment" asp-action="EditRole" asp-route-id="@roleId" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </form>